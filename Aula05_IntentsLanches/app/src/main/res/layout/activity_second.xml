<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity" android:orientation="vertical">

    <TextView
            android:text="Total da conta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="20sp"
            android:gravity="center_horizontal|center_vertical"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textoTotal"
            android:gravity="center_horizontal|center_vertical" android:textSize="48sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textoDescricao"/>
    <Button
            android:text="Pagar no Banco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/botaoPagar"/>
    <Button
            android:text="Enviar por E-mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/botaoEmail"/>
</LinearLayout>