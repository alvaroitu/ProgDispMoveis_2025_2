<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2" android:orientation="vertical" android:padding="10dp">

    <TextView
            android:text="Valor Recebido"
            android:layout_width="match_parent"
            android:layout_height="66dp" android:id="@+id/textViewValorRecebido" android:gravity="center"/>
    <Button
            android:text="Google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonGoogle"/>
    <Button
            android:text="E-mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonEmail"/>
    <Button
            android:text="Voltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonVoltar"/>
</LinearLayout>